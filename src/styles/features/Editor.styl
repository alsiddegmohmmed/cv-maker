section
  color bg-field
  margin 0 0.5rem
  max-width 95svw
  width 49.625rem
  background fg-main
  padding 0.75rem 1rem
  border-radius radius
  box-shadow shadow-main

  input
  textarea
    resize none
    color black
    outline outline
    min-height 1.5rem
    background white
    border border-fg
    caret-color fg-main
    border-radius radius
    padding 0.375rem 0.5rem
    transition border-color transition

  @media (hover hover)
    input:hover
    textarea:hover
      outline outline
      border-color border-color

  input:focus
  textarea:focus
    outline outline
    border-color border-color

  .editor-section-container
    gap 0.75rem
    display flex
    overflow-y auto
    max-height 70rem
    margin-top 0.375rem
    scrollbar-width none
    margin-bottom 0.5rem
    flex-direction column
    transition transition
    transition-property max-height, margin-top

    &.hide
      max-height 0
      margin-top 0

    div
      display grid
      gap 0.75rem 1rem

    span
      display flex
      gap 0.375rem
      flex-direction column

  .editor-accordion
    display flex
    min-width 100%
    padding 0.25rem 0
    align-items center
    justify-content space-between
    color bg-field
    border outline
    border-radius radius
    transition transition
    background transparent
    transition-property border-color, background
    cursor pointer

    &:focus-visible
      outline-style solid
      outline-color border-color

    @media (hover hover)
      &:hover
        background border-color

    div
      padding 0.625rem
      color bg-field
      border-radius radius
      background transparent
      transition transform transition

      &.open
        transform rotate(180deg)

  h1
  label
    user-select none

    &::selection
      color fg-main
      background bg-main

  h1
    margin 0
    font-weight 500

.add-button
  border 0
  height 3rem
  margin 0 1px
  color fg-main
  cursor pointer
  font-size 1.25rem
  background white
  border-radius radius
  transition transition
  -webkit-tap-highlight-color fg-tap
  transition-property color, border-color, background

  &:focus-visible
    outline-style solid
    outline-color border-color

  &:disabled
    color bg-field
    cursor not-allowed
    background transparent

  @media (hover hover)
    &:hover:not(:disabled)
      background bg-main