main
  color black
  margin 0 0.5rem
  overflow-y auto
  max-width 95svw
  background white
  scrollbar-width thin
  box-shadow shadow-main
  width calc(var(--size-preview) * 49.625)
  min-height calc(var(--size-preview) * 70)
  max-height calc(var(--size-preview) * 70)
  padding calc(var(--size-preview) * 1.4375) calc(var(--size-preview) * 2.9375)

  .content
    margin var(--size-preview) 0

  h1
  h2
  h3
  h4
  ul
  p
    margin 0
    font-weight 400
    overflow-wrap break-word

  h1
    line-height 1
    font-weight 500
    font-size calc(var(--size-preview) * 1.5)

  ul
    padding-left calc(var(--size-preview) * 2.5)

  a
    color inherit
    text-decoration none
    border-radius radius
    -webkit-tap-highlight-color bg-tap

    &:focus-visible
      outline border-fg

    @media (hover hover)
      &:hover
        background link
        box-shadow shadow-link