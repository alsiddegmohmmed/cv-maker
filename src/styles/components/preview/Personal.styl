#personal
  text-align center

  h1
  h2
  h3
  h4
    margin 0
    font-weight 400

  h1
    line-height 1

  h2
    margin 0.375rem
    font-size 1.17rem

  h3
    font-size 1rem

  h4
    margin 0.375rem

  a
    color inherit
    text-decoration none
    border-radius radius
    -webkit-tap-highlight-color bg-tap

    &:focus-visible
      outline 0.125rem solid fg-main

    @media (hover hover)
      &:hover
        background link
        box-shadow shadow-link

  hr
    margin 1rem 0