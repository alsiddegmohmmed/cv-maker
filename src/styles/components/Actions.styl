#actions
  gap 0.25rem
  display flex
  overflow clip
  padding-top 0.75rem
  justify-content flex-end

  .action-btn
    border 0
    gap 0.25rem
    margin 0 1px
    cursor pointer
    display inherit
    height 2.875rem
    font-size 1.25rem
    min-width 9.25rem
    align-items center
    justify-content center
    border-radius border-curve
    transition transition-config
    -webkit-tap-highlight-color tap-fg
    transition-property color, outline, background

    &:focus-visible
      outline edge-style highlight

    &:disabled
      color field-bg
      cursor not-allowed
      background transparent

    @media (hover hover)
      &:hover:not(:disabled)
        background main-bg

  #reset-btn
    color main-bg
    background main-reset

    @media (hover hover)
      &:hover
        background hover-reset

  #download-btn
    color main-bg
    background main-download

    @media (hover hover)
      &:hover
        background hover-download