#actions
  gap 0.25rem
  display flex
  overflow clip
  padding-top 0.75rem
  justify-content flex-end

.editor-action
  border 0
  display inherit
  align-items center
  justify-content center
  gap 0.25rem
  margin 0 1px
  cursor pointer
  height 2.875rem
  font-size 1.25rem
  min-width 9.25rem
  border-radius radius
  transition transition
  -webkit-tap-highlight-color fg-tap
  transition-property color, border-color, background

  &:focus-visible
    outline-style solid
    outline-color border-color

  &:disabled
    color bg-field
    cursor not-allowed
    background transparent

  @media (hover hover)
    &:hover:not(:disabled)
      background bg-main

#reset-btn
  color bg-main
  background #be123c // tw-rose-700

  @media (hover hover)
    &:hover
      background #9f1239// tw-rose-800

#download-btn
  color bg-main
  background #0f766e // tw-teal-700

  @media (hover hover)
    &:hover
      background #115e59 // tw-teal-800