header
footer
  margin 16px
  font-size 20px
  user-select none
  text-align center

  a
    color inherit
    position relative
    border-radius radius
    text-decoration none
    -webkit-tap-highlight-color bg-tap

    &:focus-visible
      outline 2px solid fg-main

    &::before
      left 0
      width 100%
      content ''
      display block
      height 2px
      bottom -4px
      position absolute
      background fg-main
      transform scaleX(0)
      border-radius radius
      transform-origin bottom right
      transition transform transition

    @media (hover hover)
      &:hover::before
        transform scaleX(1)
        transform-origin bottom left